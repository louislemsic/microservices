{
  "name": "atlas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm install --prefix shared && npm run build --prefix shared && npm install --prefix gateway && for dir in services/*/; do npm install --prefix \"$dir\"; done",
    "start": "ts-node scripts/run-services.ts start:prod",
    "dev": "ts-node scripts/run-services.ts start:dev",
    "build": "ts-node scripts/run-services.ts build",
    "build:shared": "npm run build --prefix shared",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:services": "ts-node scripts/run-services.ts test",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "create-service": "ts-node scripts/create-service.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
